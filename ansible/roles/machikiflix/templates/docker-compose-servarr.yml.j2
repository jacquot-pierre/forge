---
services:
  sonarr:
    image: linuxserver/sonarr:4.0.16
    container_name: "sonarr"
    restart: unless-stopped
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - {{ machikiflix_arr_folder }}/sonarr/config:/config
      - {{ machikiflix_data }}:/data # https://wiki.servarr.com/docker-guide#consistent-and-well-planned-paths
      - /etc/localtime:/etc/localtime:ro
    networks:
      - proxy
    labels:
      traefik.enable: "true"
      traefik.http.routers.sonarr.service: sonarr
      traefik.http.routers.sonarr.rule: "Host(`machikiflix.guerande.local.net`) && PathPrefix(`/sonarr`)"
      traefik.http.routers.sonarr.entrypoints: "web"
      traefik.http.services.sonarr.loadbalancer.server.port: 8989

  radarr:
    image: linuxserver/radarr:4.0.16
